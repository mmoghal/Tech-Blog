<div class="post card">
  <div class="card-header">
    <h2>Edit Post</h2>
  </div>
  <form id="edit-post-form" class="card-body">
    <input type="hidden" id="post-id" value="{{post.id}}" /> <!-- Hidden input field to store the post ID -->

    <label class="form-label" for="post-title">Title</label>
    <input type="text" id="post-title" value="{{post.title}}" class="form-input" /> <!-- Input field to edit the post title -->

    <label class="form-label" for="post-body">Content</label>
    <textarea id="post-body" class="form-input">{{post.body}}</textarea> <!-- Textarea field to edit the post content -->

    <button type="submit" class="btn">Update</button> <!-- Button to submit the form and update the post -->

    <button type="button" id="delete-btn" class="btn">Delete</button> <!-- Button to delete the post -->
  </form>
</div>
